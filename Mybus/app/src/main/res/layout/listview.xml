<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/swaminarayanchowk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SwaminarayanChowk"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold">
                ></TextView>

            <TextView
                android:id="@+id/railwaystation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Railway Satation Tarminal"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/kapodra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DGVCL kapodra"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/udhana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Udhana Darwaja"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/kargilchowk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kargil chowk"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>